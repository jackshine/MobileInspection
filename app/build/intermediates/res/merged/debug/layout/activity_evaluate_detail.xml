<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/frame_evaluate"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        <LinearLayout
            android:id="@+id/linear_title"
            style="@style/activity_title"
            android:background="#00000000">
            <include
                style="@style/activity_title_include"
                layout="@layout/layout_activity_title" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linear_title"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/linear_evaluate_bg1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_evaluate_title_1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="项目服务"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_evaluate_bg1"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="#fff"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_evaluate_bg2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_evaluate_title_2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="产品质量"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_evaluate_bg2"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="#fff"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_evaluate_bg3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_evaluate_title_3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="综合评价"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_evaluate_bg3"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="#fff"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>