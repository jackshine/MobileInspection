<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="stateHidden|adjustResize">
    <LinearLayout
        style="@style/activity_title"
        android:layout_marginBottom="10dp">
        <include layout="@layout/layout_activity_title"
            style="@style/activity_title_include"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_approve"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_show_track"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="巡检轨迹"
                android:background="#42acfb"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="审批"
                android:background="#1FC435"
                android:textColor="#fff"/>

        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear_approve">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        style="@style/linearlayout_userinfo_center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检名称"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/edt_new_inspection_name"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                android:background="@drawable/bg_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

    </LinearLayout>
    <TextView  style="@style/line_horizontal" />
    <LinearLayout
        style="@style/linearlayout_userinfo_center_vertical">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="合同名称"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_contract_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_new_inspection_contract_name"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                />

        </RelativeLayout>
        
    </LinearLayout>
    <TextView
        android:visibility="gone"
        style="@style/line_horizontal" />
    <LinearLayout
        android:visibility="gone"
        style="@style/linearlayout_userinfo_center_vertical">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检单位"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_unitname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_new_inspection_unitname"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                />

        </RelativeLayout>

    </LinearLayout>
    <TextView  style="@style/line_horizontal" />
    <LinearLayout
        style="@style/linearlayout_userinfo_center_vertical">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检范围"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_new_inspection_size"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                />
        </RelativeLayout>

    </LinearLayout>
    <TextView  style="@style/line_horizontal" />
    <LinearLayout
        style="@style/linearlayout_userinfo_center_vertical">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="交通工具"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_traffic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_new_inspection_traffic"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                />
        </RelativeLayout>

    </LinearLayout>
    <TextView  style="@style/line_horizontal" />
    <LinearLayout
        style="@style/linearlayout_userinfo_center_vertical"
        android:layout_height="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检内容"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/edt_new_inspection_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_content"
                android:minLines="2"
                android:maxLines="8"
                android:textSize="14dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="3dp"
                />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        style="@style/line_horizontal" />
    <LinearLayout
        android:visibility="gone"
        style="@style/linearlayout_userinfo_center_vertical">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检人"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_worker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_new_inspection_worker"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"
                android:src="@drawable/login_user"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView  style="@style/line_horizontal" />
    <LinearLayout
        style="@style/linearlayout_userinfo_center_vertical">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检日期"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_new_inspection_date"
                style="@style/new_inspection_textview"
                android:layout_width="match_parent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/list_ico_li_down"/>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </RelativeLayout>

</LinearLayout>