<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        style="@style/Linearlayout_ListItem"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/layout_radius_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_radius_up_bg">
            <TextView
                android:id="@+id/tv_inspection_name"
                style="@style/listview_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/title"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_inspection_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/listview_item_textview333"
                android:layout_marginLeft="10dp"
                android:textSize="16dp" />

        </RelativeLayout>

            <TextView
                style="@style/line_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/choose_contract_name_rela_background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_inspection_time"
                style="@style/listview_text_style"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>