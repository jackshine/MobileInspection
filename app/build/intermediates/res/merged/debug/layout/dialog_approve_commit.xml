<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="#42acfb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_approve_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入拒绝的理由"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/edt_approve_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_normal"
            android:gravity="top"
            android:minHeight="120dp"
            android:padding="3dp"
            android:layout_margin="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <Button
                android:id="@+id/btn_approve_concal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="16sp"
                android:background="#99ff0000"/>

            <TextView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                />

            <Button
                android:id="@+id/btn_approve_commit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="16sp"
                android:background="#9900ff00"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>