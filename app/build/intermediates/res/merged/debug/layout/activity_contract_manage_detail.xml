<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/activity_title">
        <include layout="@layout/layout_activity_title"
            style="@style/activity_title_include"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_background"
        android:orientation="vertical">
        <LinearLayout
            style="@style/contract_detail_layout"
            >
            <LinearLayout
                style="@style/inspection_detail_layout">
                <TextView
                    style="@style/inspection_detail_textview"
                    android:gravity="left|center_vertical"
                    android:text="合同名称"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tv_contract_detail_name"
                    style="@style/inspection_detail_textview"
                    android:textColor="@color/listview_item_textview333"
                    android:gravity="center_vertical"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/contract_detail_layout"
            >
            <LinearLayout
                style="@style/inspection_detail_layout">
                <TextView
                    style="@style/inspection_detail_textview"
                    android:gravity="left|center_vertical"
                    android:text="合同开始时间"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tv_contract_detail_begintime"
                    style="@style/inspection_detail_textview"
                    android:textColor="@color/listview_item_textview333"
                    android:gravity="center_vertical"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/contract_detail_layout"
            >
            <LinearLayout
                style="@style/inspection_detail_layout">
                <TextView
                    style="@style/inspection_detail_textview"
                    android:gravity="left|center_vertical"
                    android:text="合同截止时间"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tv_contract_detail_endtime"
                    style="@style/inspection_detail_textview"
                    android:gravity="center_vertical"
                    android:textColor="@color/listview_item_textview333"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/contract_detail_layout"
            >
            <LinearLayout
                style="@style/inspection_detail_layout">
                <TextView
                    style="@style/inspection_detail_textview"
                    android:gravity="left|center_vertical"
                    android:text="单位名称"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tv_contract_detail_untilname"
                    style="@style/inspection_detail_textview"
                    android:gravity="center_vertical"
                    android:textColor="@color/listview_item_textview333"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/contract_detail_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                style="@style/inspection_detail_layout">
                <TextView
                    style="@style/inspection_detail_textview"
                    android:gravity="left|center_vertical"
                    android:text="合同内容"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
                <EditText
                    android:id="@+id/tv_contract_detail"
                    style="@style/inspection_detail_textview"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/listview_item_textview333"
                    android:background="@drawable/bg_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:minHeight="80dp"
                    android:paddingTop="3dp"/>
            </RelativeLayout>

        </LinearLayout>

        <com.tianjin.MobileInspection.customview.ScrollListView
            android:id="@+id/lv_contract_detail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.tianjin.MobileInspection.customview.ScrollListView>



    </LinearLayout>
    </ScrollView>
</LinearLayout>