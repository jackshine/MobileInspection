<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/layout_background"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/activity_title">
        <include layout="@layout/layout_activity_title"
            style="@style/activity_title_include"/>
    </LinearLayout>

    <LinearLayout
        style="@style/contract_detail_layout">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="巡检名称"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_new_inspection_plan_name"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_content"
            android:hint="请输入巡检名称"
            android:textSize="14dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="3dp"/>
    </LinearLayout>
    <TextView style="@style/line_horizontal"/>
    <LinearLayout
        style="@style/contract_detail_layout"
        android:layout_marginTop="0dp"
        android:layout_height="100dp">
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="计划详情"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_new_inspection_plan_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_content"
            android:minLines="2"
            android:maxLines="8"
            android:textSize="14dp"
            android:hint="请输入巡检内容"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="3dp"/>
    </LinearLayout>
    <TextView style="@style/line_horizontal"/>
    <LinearLayout
        style="@style/contract_detail_layout"
        android:layout_marginTop="0dp"
        >
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="开始日期"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_new_inspection_plan_start"
                style="@style/textview_main_normal_style"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/list_ico_li_down"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView style="@style/line_horizontal"/>
    <LinearLayout
        style="@style/contract_detail_layout"
        android:layout_marginTop="0dp"
        >
        <LinearLayout
            style="@style/inspection_detail_layout"
            android:layout_width="80dp">
            <TextView
                style="@style/inspection_detail_textview"
                android:gravity="left|center_vertical"
                android:text="截止日期"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relat_new_inspection_plan_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_new_inspection_plan_end"
                style="@style/textview_main_normal_style"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/list_ico_li_down"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>