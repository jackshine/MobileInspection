<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id="@+id/tv_main_flow_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" />
        <TextView style="@style/line_vertical" />
        <TextView
            android:id="@+id/tv_main_flow_man"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" />
        <TextView style="@style/line_vertical" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_main_flow_begain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:textSize="10sp"
                android:gravity="center"/>
            <TextView style="@style/line_horizontal" />
            <TextView
                android:id="@+id/tv_main_flow_end"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:textSize="10sp"
                android:gravity="center"/>

        </LinearLayout>
        <TextView style="@style/line_vertical" />
        <TextView
            android:id="@+id/tv_main_flow_decision"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" />
    </LinearLayout>
    <TextView style="@style/line_horizontal" />

</LinearLayout>