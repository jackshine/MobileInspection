<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/Linearlayout_ListItem"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/layout_radius_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/layout_radius_up_bg">
            <TextView
                android:id="@+id/tv_choose_traffic"
                style="@style/listview_text_style"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/listview_item_textview666"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/tv_choose_name"
                style="@style/listview_text_style"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/title"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_choose_traffic"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--<ListView-->
                <!--android:id="@+id/lv_node_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

            <!--</ListView>-->
            <LinearLayout
                android:id="@+id/linear_node_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_show_more"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/str_show_more"/>
            </LinearLayout>

        </RelativeLayout>

            <TextView
                style="@style/line_horizontal" />

        <TextView
            android:id="@+id/tv_choose_content"
            style="@style/listview_text_style"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/choose_contract_name_rela_background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_choose_worker_name"
                style="@style/listview_text_style"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tv_choose_time"
                style="@style/listview_text_style"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>